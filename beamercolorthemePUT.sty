%inspired by beaver
\ProvidesPackage{beamercolorthemePUT}

\mode<presentation>

% http://rgb.to/pantone/coated/308-c
\definecolor{granat}{RGB}{0, 88, 124}
% http://rgb.to/pantone/coated/877-c
\definecolor{srebro}{RGB}{138, 141, 143}
% http://rgb.to/pantone/coated/173-c
\definecolor{cegla}{RGB}{207, 69, 32}

\setbeamercolor{normal text}{fg=granat}
\setbeamercolor{structure}{fg=cegla,bg=srebro!50!white}
\setbeamercolor{block body}{bg=srebro!10!white}

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=cegla}
\setbeamercolor*{palette primary}{fg=granat!80!black,bg=srebro!80!white}
\setbeamercolor*{palette secondary}{fg=granat!70!black,bg=srebro!70!white}
\setbeamercolor*{palette tertiary}{fg=granat!60!black,bg=srebro!60!white}
\setbeamercolor*{palette quaternary}{fg=granat!50!black,bg=srebro!50!white}

\setbeamercolor*{sidebar}{fg=cegla,bg=srebro!15!white}

\setbeamercolor*{palette sidebar primary}{fg=cegla!10!black}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=cegla!50!black}
\setbeamercolor*{palette sidebar quaternary}{fg=srebro!10!white}

\setbeamercolor{titlelike}{parent=palette primary,fg=cegla}
\setbeamercolor{frametitle}{bg=srebro!10!white}
\setbeamercolor{frametitle right}{bg=srebro!60!white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\setbeamercolor{note page}{bg=white}
\setbeamercolor{note title}{bg=srebro!10}

\mode
<all>
